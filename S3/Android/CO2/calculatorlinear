            android:onClick="onButtonClick" />

        <Button
            android:text="/"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick" />

        <!-- Row 2 -->
        <Button
